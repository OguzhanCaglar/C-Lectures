# Derleyici ve ayarlar?
CC = gcc
CFLAGS = -Wall -std=c99

#Hedef Program Ad覺
TARGET = notepad

#Kaynak Dosyalar
SRCS = main.c notepad.c password.c

# Header dosyalar覺 otomatik buldural覺m
OBJS = $(SRCS:.c=.o)

#Varsay覺lan hedef
all: $(TARGET)

$(TARGET): $(OBJS)
	$(CC) $(CFLAGS) -o $@ $^

#Temizlik
clean:
	rm -f *.o $(TARGET)